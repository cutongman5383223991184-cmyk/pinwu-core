<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pinwu.app.modules.order.mapper.PwOrderMapper">

    <resultMap type="com.pinwu.app.modules.order.domain.entity.PwOrder" id="PwOrderResult">
        <result property="id"    column="id"    />
        <result property="orderNo"    column="order_no"    />
        <result property="buyerId"    column="buyer_id"    />
        <result property="sellerId"    column="seller_id"    />
        <result property="totalAmount"    column="total_amount"    />
        <result property="payAmount"    column="pay_amount"    />
        <result property="payType"    column="pay_type"    />
        <result property="status"    column="status"    />
        <result property="receiverName"    column="receiver_name"    />
        <result property="receiverPhone"    column="receiver_phone"    />
        <result property="receiverDetailAddress"    column="receiver_detail_address"    />
        <result property="note"    column="note"    />
        <result property="expireTime"    column="expire_time"    />
        <result property="payTime"    column="pay_time"    />
        <result property="createTime"    column="create_time"    />

        <result property="buyerNickname" column="buyer_nickname"/>
        <result property="sellerNickname" column="seller_nickname"/>
    </resultMap>

    <insert id="insertPwOrder" parameterType="com.pinwu.app.modules.order.domain.entity.PwOrder" useGeneratedKeys="true" keyProperty="id">
        insert into pw_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderNo != null">order_no,</if>
            <if test="buyerId != null">buyer_id,</if>
            <if test="sellerId != null">seller_id,</if>
            <if test="totalAmount != null">total_amount,</if>
            <if test="payAmount != null">pay_amount,</if>
            <if test="status != null">status,</if>
            <if test="receiverName != null">receiver_name,</if>
            <if test="receiverPhone != null">receiver_phone,</if>
            <if test="receiverDetailAddress != null">receiver_detail_address,</if>
            <if test="note != null">note,</if>
            <if test="expireTime != null">expire_time,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderNo != null">#{orderNo},</if>
            <if test="buyerId != null">#{buyerId},</if>
            <if test="sellerId != null">#{sellerId},</if>
            <if test="totalAmount != null">#{totalAmount},</if>
            <if test="payAmount != null">#{payAmount},</if>
            <if test="status != null">#{status},</if>
            <if test="receiverName != null">#{receiverName},</if>
            <if test="receiverPhone != null">#{receiverPhone},</if>
            <if test="receiverDetailAddress != null">#{receiverDetailAddress},</if>
            <if test="note != null">#{note},</if>
            <if test="expireTime != null">#{expireTime},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <select id="selectPwOrderByOrderNo" resultMap="PwOrderResult">
        select * from pw_order where order_no = #{orderNo}
    </select>

    <update id="updatePwOrder">
        update pw_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="status != null">status = #{status},</if>
            <if test="payType != null">pay_type = #{payType},</if>
            <if test="payTime != null">pay_time = #{payTime},</if>
            <if test="tradeNo != null">trade_no = #{tradeNo},</if>
        </trim>
        where id = #{id}
    </update>

    <resultMap id="PwOrderWithItemResult" type="com.pinwu.app.modules.order.domain.entity.PwOrder" extends="PwOrderResult">
        <collection property="itemList" ofType="com.pinwu.app.modules.order.domain.entity.PwOrderItem">
            <id property="id" column="item_id"/>
            <result property="productName" column="item_product_name"/>
            <result property="productPic" column="item_product_pic"/>
            <result property="skuName" column="item_sku_name"/>
            <result property="productPrice" column="item_product_price"/>
            <result property="buyCount" column="item_buy_count"/>
        </collection>
    </resultMap>

    <select id="selectOrderList" resultMap="PwOrderWithItemResult">
        SELECT
        o.*,
        -- ★ 新增：关联查出买家和卖家的昵称
        buyer.nickname as buyer_nickname,
        seller.nickname as seller_nickname,

        i.id as item_id,
        i.product_name as item_product_name,
        i.product_pic as item_product_pic,
        i.sku_name as item_sku_name,
        i.product_price as item_product_price,
        i.buy_count as item_buy_count
        FROM pw_order o
        LEFT JOIN pw_order_item i ON o.id = i.order_id
        -- ★ 新增：关联用户表两次
        LEFT JOIN pw_user buyer ON o.buyer_id = buyer.id
        LEFT JOIN pw_user seller ON o.seller_id = seller.id
        <where>
            <if test="role == 'buyer'"> AND o.buyer_id = #{userId} </if>
            <if test="role == 'seller'"> AND o.seller_id = #{userId} </if>
            <if test="status != null"> AND o.status = #{status} </if>
        </where>
        ORDER BY o.create_time DESC
    </select>

</mapper>